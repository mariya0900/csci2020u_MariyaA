<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="Message" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="txtMessage" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Send" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#sendMessage"/>
    <Button text="Exit" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#exit"/>
</GridPane>